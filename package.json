{
  "name": "limit-music",
  "version": "0.1.1-dev",
  "description": "limit-music 年轻人的第一个音乐播放器",
  "main": "./out/main/index.js",
  "author": "纸境工作室",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "prepare": "npm install && npm build-web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev-web": "npm run dev-web --prefix=./controller-web",
    "build-web": "npm run build --prefix=./controller-web",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build --prefix=./controller-web && npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "build": {
    "productName": "limit 音乐",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "runAfterFinish": true,
      "shortcutName": "limit 音乐"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "body-parser": "^1.20.1",
    "dexie": "^3.2.3",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "ip": "^1.1.8",
    "music-metadata-browser": "^2.5.9",
    "pinia": "^2.0.30",
    "qrcode": "^1.5.1",
    "socket.io": "^4.6.0",
    "vue-router": "4"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.17",
    "eslint": "^8.31.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.8.0",
    "prettier": "^2.8.2",
    "pug": "^3.0.2",
    "stylus": "^0.59.0",
    "vite": "^4.0.4",
    "vite-plugin-eslint": "^1.8.1",
    "vue": "^3.2.45"
  }
}
